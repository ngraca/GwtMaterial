<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	</ui:style>
	<g:HTMLPanel>
		
		<m:MaterialTitle title="TextBox" description="Text fields allow user input. The border should light up simply and clearly indicating which field the user is currently editing. "/>
		<m:MaterialTextBox placeholder="First Name" />
		<m:MaterialTextBox placeholder="Email" icon="mdi-action-account-circle" />
		
		<pre>
<span class="tag">&lt;m:MaterialTextBox</span> <span class="attr">placeholder</span>="First Name" <span class="tag">/></span>
<span class="tag">&lt;m:MaterialTextBox</span> <span class="attr">placeholder</span>="Email" <span class="attr">icon</span>="mdi-action-account-circle" <span class="tag">/></span>
		</pre>
		
		<m:MaterialTitle title="Textarea" description="Textareas allow larger expandable user input. The border should light up simply and clearly indicating which field the user is currently editing. "/>
		<m:MaterialTextArea placeholder="Content" />
		<m:MaterialTextArea placeholder="About" icon="mdi-action-face-unlock"/>
		
		<pre>
<span class="tag">&lt;m:MaterialTextArea</span> <span class="attr">placeholder</span>="Content" <span class="tag">/></span>
		</pre>
		
		<m:MaterialTitle title="ListBox" description="Select allows user input through specified options."/>
		<m:MaterialListBox >
			<item>Option 1</item>
			<item>Option 2</item>
			<item>Option 3</item>
		</m:MaterialListBox>
		
		<pre>
<span class="tag">&lt;m:MaterialListBox</span><span class="tag">></span>
	<span class="tag">&lt;item</span><span class="tag">></span>Option 1<span class="tag">&lt;item</span><span class="tag">></span>
	<span class="tag">&lt;item</span><span class="tag">></span>Option 2<span class="tag">&lt;item</span><span class="tag">></span>
	<span class="tag">&lt;item</span><span class="tag">></span>Option 3<span class="tag">&lt;item</span><span class="tag">></span>
<span class="tag">&lt;/m:MaterialListBox</span><span class="tag">></span>
		</pre>
		
		<m:MaterialTitle title="Radio Button" description="Radio Buttons are used when the user must make only one selection out of a group of items"/>
		<m:MaterialRadioButton name="gender" text="Male"/>
		<m:MaterialRadioButton name="gender" text="Female"/>
		
		<pre>
<span class="tag">&lt;m:MaterialRadioButton</span> <span class="attr">name</span>="gender" <span class="attr">text</span>="Male"<span class="tag">/></span>
<span class="tag">&lt;m:MaterialRadioButton</span> <span class="attr">name</span>="gender" <span class="attr">text</span>="Female"<span class="tag">/></span>
		</pre>
		
		<m:MaterialTitle title="Check Box" description="Checkboxes"/>
		<m:MaterialCheckBox text="Blue"/>
		<m:MaterialCheckBox text="Red"/>
		<m:MaterialCheckBox text="Green"/>
		
		<pre>
<span class="tag">&lt;m:MaterialCheckBox </span> <span class="attr">text</span>="Blue" <span class="tag">/></span>
<span class="tag">&lt;m:MaterialCheckBox </span> <span class="attr">text</span>="Red" <span class="tag">/></span>
<span class="tag">&lt;m:MaterialCheckBox </span> <span class="attr">text</span>="Green" <span class="tag">/></span>
		</pre>
		
		<m:MaterialTitle title="Switches" />
		<m:MaterialSwitch ui:field="mySwitch"/>
		
		<pre>
<span class="tag">&lt;m:MaterialSwitch </span> <span class="tag">/></span>
		</pre>
		
		<m:MaterialTitle title="Range" />
		<m:MaterialRange />
		
		<pre>
<span class="tag">&lt;m:MaterialRange </span> <span class="tag">/></span>
		</pre>
		
		
		
		<m:MaterialTitle title="Date Picker"  description="Material Datepicker"/>
		<m:MaterialDatePicker placeholder="Date"/>
		
		<pre>
<span class="tag">&lt;m:MaterialDatePicker placeholder="Date"</span> <span class="tag">/></span>
		</pre>
		
	</g:HTMLPanel>
</ui:UiBinder> 
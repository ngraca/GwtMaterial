<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with field='res' type='gwt.material.design.demo.client.resources.MaterialResources' />
	
	<ui:style>
	
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialTitle title="Basic"/>
		<m:MaterialCollection>
			<m:item><m:MaterialLabel text="Sample 1" /></m:item>
			<m:item><m:MaterialLabel text="Sample 2" /></m:item>
			<m:item><m:MaterialLabel text="Sample 3" /></m:item>
			<m:item><m:MaterialLabel text="Sample 4" /></m:item>
		</m:MaterialCollection>
		
		<m:MaterialTitle title="Header"/>
		<m:MaterialCollection>
			<m:header><m:MaterialLabel text="GWT Material" /></m:header>
			<m:item><m:MaterialLabel text="Sample 1" /></m:item>
			<m:item><m:MaterialLabel text="Sample 2" /></m:item>
			<m:item><m:MaterialLabel text="Sample 3" /></m:item>
			<m:item><m:MaterialLabel text="Sample 4" /></m:item>
		</m:MaterialCollection>
		
		<m:MaterialTitle title="Avatar Content"/>
		<m:MaterialCollection>
			<m:avatar>
				<m:MaterialPanel>
					<m:MaterialImage resource="{res.yuna}" addStyleNames="circle"/>
				    <m:MaterialLabel text="Title" fontSize="1.5"/>
				    <m:MaterialLabel text="First Line"/>
				    <m:MaterialLabel text="Second Line"/>
				    <m:MaterialIcon icon="mdi-action-grade" textColor="orange"/>
				</m:MaterialPanel>
			</m:avatar>
			<m:avatar>
				<m:MaterialPanel>
					<m:MaterialIcon icon="mdi-file-folder" type="avatar" color="grey" shape="circle"/>
				    <m:MaterialLabel text="Title" fontSize="1.5"/>
				    <m:MaterialLabel text="First Line"/>
				    <m:MaterialLabel text="Second Line"/>
				    <m:MaterialIcon icon="mdi-action-grade" textColor="orange"/>
				</m:MaterialPanel>
			</m:avatar>
			<m:avatar>
				<m:MaterialPanel>
					<m:MaterialIcon icon="mdi-action-assessment" type="avatar" color="green" shape="circle"/>
				    <m:MaterialLabel text="Title" fontSize="1.5"/>
				    <m:MaterialLabel text="First Line"/>
				    <m:MaterialLabel text="Second Line"/>
				    <m:MaterialIcon icon="mdi-action-grade" textColor="orange"/>
				</m:MaterialPanel>
			</m:avatar>
			<m:avatar>
				<m:MaterialPanel>
					<m:MaterialIcon icon="mdi-av-play-arrow" type="avatar" color="red" shape="circle"/>
				    <m:MaterialLabel text="Title" fontSize="1.5"/>
				    <m:MaterialLabel text="First Line"/>
				    <m:MaterialLabel text="Second Line"/>
				    <m:MaterialIcon icon="mdi-action-grade" textColor="orange"/>
				</m:MaterialPanel>
			</m:avatar>
		</m:MaterialCollection>
		
		<m:MaterialTitle title="Icons" />
		<m:MaterialCollection>
			<m:item><m:MaterialLink text="Sample 1" icon="mdi-content-send" iconPosition="right" textColor="blue"/></m:item>
			<m:item><m:MaterialLink text="Sample 2" icon="mdi-content-send" iconPosition="right" textColor="blue"/></m:item>
			<m:item><m:MaterialLink text="Sample 3" icon="mdi-content-send" iconPosition="right" textColor="blue"/></m:item>
			<m:item><m:MaterialLink text="Sample 4" icon="mdi-content-send" iconPosition="right" textColor="blue"/></m:item>
		</m:MaterialCollection>
		
		<m:MaterialTitle title="Dismissable" description="You can just add the class dismissable to enable each collection item to be swiped away. This is only for touch enabled devices."/>
		<m:MaterialCollection>
			<m:dismissable><m:MaterialLink text="Sample 1" icon="mdi-content-send" iconPosition="right" /></m:dismissable>
			<m:dismissable><m:MaterialLink text="Sample 2" icon="mdi-content-send" iconPosition="right" /></m:dismissable>
			<m:dismissable><m:MaterialLink text="Sample 3" icon="mdi-content-send" iconPosition="right" /></m:dismissable>
			<m:dismissable><m:MaterialLink text="Sample 4" icon="mdi-content-send" iconPosition="right" /></m:dismissable>
		</m:MaterialCollection>
	</m:MaterialPanel>
</ui:UiBinder> 
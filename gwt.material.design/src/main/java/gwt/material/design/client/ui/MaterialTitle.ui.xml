<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title{
			font-weight: 300;
			margin-top: 1.5em;
		}
		.desc{
			color: rgba(0, 0, 0, 0.71);
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="titlePanel">
			<h4><g:Label ui:field="lblTitle" addStyleNames="{style.title}"/></h4>
		</g:HTMLPanel>
		
		<p><g:Label ui:field="lblDescription" addStyleNames="{style.desc}"/></p>
	</g:HTMLPanel>
</ui:UiBinder> 